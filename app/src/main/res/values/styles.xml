<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="infoButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_info_</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="simpletooltip_default" parent="@android:style/TextAppearance.Medium">

    </style>

    <style name="subHeadingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
